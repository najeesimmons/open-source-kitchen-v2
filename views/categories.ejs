<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head.ejs', {page: 'Recipe Blog' }) %> <%- include
  ('./partials/nav.ejs') %>
  <body>
    <h1><%= category %></h1>
    <div>
      <% for(let idx=0; idx < foundCategory.length; idx++){ %>
      <div>
        <div>
          <div>
            <div>
              <img src="<%= foundCategory[idx].image %>" />
            </div>
            <a href="/recipeblog/<%= foundCategory[idx].title %>">
              <div>
                <h2><%= foundCategory[idx].title %></h2>
              </div>
            </a>
            <div><%= foundCategory[idx].description %></div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </body>
</html>
